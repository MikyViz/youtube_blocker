{
  "manifest_version": 3,
  "name": "YouTube Blocker - Путь Самурая",
  "version": "2.0",
  "description": "Укрепи свою честь на пути самурая. Система очков чести и дисциплины.",
  "permissions": ["storage", "notifications", "alarms"],
  "host_permissions": ["*://*.youtube.com/*"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "js": [
        "modules/state-manager.js",
        "modules/gamification.js",
        "modules/ui-components.js",
        "modules/notifications.js",
        "content.js"
      ],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "YouTube Blocker - Статистика и настройки",
    "default_icon": {
      "16": "icons/16_samurai.png",
      "48": "icons/48_samurai.png",
      "128": "icons/128_samurai.png"
    }
  },
  "icons": {
    "16": "icons/16_samurai.png",
    "48": "icons/48_samurai.png",
    "128": "icons/128_samurai.png"
  }
}
